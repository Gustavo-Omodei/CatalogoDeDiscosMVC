<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catálogo de Discos</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <header>
        <h1>Catálogo de Discos</h1>
        <nav>
            <ul>
                <li><a href="/">Início</a></li>
                <li><a href="/discos">Discos</a></li>
                <li><a href="/artistas/novo">Artistas</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <!-- Barra de busca -->
        <h2>Buscar Discos</h2>
        <form method="get" action="/discos">
            <div>
                <label for="nomeDisco">Nome do Disco:</label>
                <input type="text" id="nomeDisco" name="nomeDisco" placeholder="Buscar por nome do disco" value="<%= nomeDisco || '' %>">
            </div>
            <div>
                <label for="nomeArtista">Nome do Artista:</label>
                <input type="text" id="nomeArtista" name="nomeArtista" placeholder="Buscar por nome do artista" value="<%= nomeArtista || '' %>">
            </div>
            <button type="submit">Buscar</button>
        </form>

        <h2>Discos Cadastrados</h2>
        <!-- Exibe a lista de discos -->
        <ul>
            <% discos.forEach(disco => { %>
                <li>
                    <h3><%= disco.titulo %></h3>
                    <p>Ano de Lançamento: <%= disco.anoLancamento %></p>
                    <img src="<%= disco.capaImagem %>" alt="Capa do Disco" width="150">
                    <br>
                    <a href="/discos/<%= disco.idDisco %>">Ver Detalhes</a>
                </li>
            <% }); %>
        </ul>
    </main>

    <footer>
        <p>&copy; 2024 Catálogo de Discos</p>
    </footer>

</body>
</html>
